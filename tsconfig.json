{
  "compilerOptions": {
    "target": "ES2023",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "renderer/*"
      ]
    },
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
