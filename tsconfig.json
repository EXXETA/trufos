{
  "compilerOptions": {
    "target": "ES2023",
    "allowJs": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["renderer/*"]
    },
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"]
  },
  "include": ["src/**/*"]
}
